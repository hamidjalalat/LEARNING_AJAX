<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<title>Learn 5</title>

	<script src="~/Scripts/jquery-2.1.3.min.js"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

	<script>

		function doSomething() {

			alert('Pause...');

			$('div#divContent').css('text-decoration', 'underline');

		}

	</script>

	<style>
		.progress {
			display: none;

			color: blue;
			margin: 10px;
			padding: 4px;
			border: thin outset;
			background-color: yellow;
		}
	</style>
</head>
<body>
	<div id="divProgress" class="progress">
		<img src="~/Content/Images/Loading.gif" alt="Loading..." title="Loading..." />
		Loading! Please Wait...
	</div>

	@using (Ajax.BeginForm(
		"GetPartialView04",
		new AjaxOptions
		{
			HttpMethod = "Post",
			UpdateTargetId = "divContent",
			LoadingElementId = "divProgress",
			InsertionMode = InsertionMode.InsertBefore,
			//OnComplete = "doSomething",
		}))
	{
		@Html.TextBox("data")

		<input type="submit" value="..." />
	}

	<div id="divContent">
	</div>
</body>
</html>
