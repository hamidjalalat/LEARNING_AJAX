<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<title>Learn 6 - 1</title>

	<script src="~/Scripts/jquery-2.1.3.min.js"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

	<script>
		function myBegin() {
			//$("input#someId").val("..."); // Set
			//var varValue = $("input#someId").val(); // Get

			$("input#txtMessage").val("Ajax Begining...");

			$("input#txtMessage").fadeIn(1000);
		}

		function myFailure() {
			$("input#txtMessage").val("Some error occured in ajax!");
		}

		function mySuccess() {
			$("input#txtMessage").val("The ajax done successfully.");
		}

		function myComplete() {
			//$("input#txtMessage").hide();

			$("input#txtMessage").fadeOut(2000);
		}

		function myConfirm() {
			var varResult = confirm("Are you sure?");

			return (varResult);
		}
	</script>

	<style>
		div#divProgress {
			display: none;
			color: blue;
			margin: 10px;
			padding: 4px;
			border: thin outset;
			background-color: yellow;
		}
	</style>
</head>
<body>
	<input type="text" id="txtMessage" name="txtMessage" />
	<br />
	<br />

	<div id="divProgress">
		<img src="~/Images/Loading.gif" alt="Loading..." title="Loading...." />
		Loading! Please Wait...
	</div>

	@Ajax.ActionLink(
			"[Ajax.ActionLink] Click Here!",
			"GetPartialView02",
			//"SomeUnknownAction",
			new AjaxOptions
			{
				HttpMethod = "Post",
				UpdateTargetId = "divContent",
				LoadingElementId = "divProgress",
				InsertionMode = InsertionMode.InsertBefore,
				OnBegin = "myBegin",
				OnFailure = "myFailure",
				OnSuccess = "mySuccess",
				OnComplete = "myComplete",
				//Confirm = "myConfirm",
				Confirm = "Are You Sure?",
				LoadingElementDuration = 2000,
			}
		)

	<div id="divContent">
		<h4>
			Content
		</h4>
	</div>
</body>
</html>
